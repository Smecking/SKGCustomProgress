<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:smecking="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context="com.smecking.customprogress.MainActivity">

    <com.smecking.customprogress.CustomProgress
        android:id="@+id/custom_progress"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <com.smecking.customprogress.CustomProgress
        android:id="@+id/custom_progress1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        smecking:currentProgress="10"
        />

    <com.smecking.customprogress.CustomProgress
        android:id="@+id/custom_progress2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        smecking:reachedColor="@color/colorAccent"
        smecking:textColor="@color/colorAccent"
        smecking:currentProgress="20"
        />

    <com.smecking.customprogress.CustomProgress
        android:id="@+id/custom_progress3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        smecking:reachedColor="@color/colorPrimary"
        smecking:textColor="@color/colorPrimary"
        smecking:currentProgress="30"
        />

    <com.smecking.customprogress.CustomProgress
        android:id="@+id/custom_progress4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        smecking:reachedColor="#dea32c"
        smecking:textColor="#dea32c"
        smecking:currentProgress="40"
        />
</LinearLayout>
